<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] [%marker] [%thread] - %msg {%mdc}%n</pattern>
        </encoder>
    </appender>

    <logger name="com.buransky.ostrostroj" level="DEBUG" />
    <logger name="com.buransky.ostrostroj.app.player.looper.LoopLooper" level="TRACE" />
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>